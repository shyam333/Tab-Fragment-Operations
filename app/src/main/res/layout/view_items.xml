<android.support.v7.widget.CardView android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/rl"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="@dimen/activity_vertical_margin"
    card_view:cardElevation="@dimen/activity_vertical_margin"
    card_view:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/edt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="118dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="NAME"
                    android:inputType="textPersonName"
                    android:textColorLink="@color/black" />

                <EditText
                    android:id="@+id/edt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="118dp"
                    android:layout_marginTop="68dp"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="ADDRESS"
                    android:inputType="textPersonName"
                    android:textColorLink="@color/black" />

                <EditText
                    android:id="@+id/edt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="118dp"
                    android:layout_marginTop="128dp"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="DATE AND TIME"
                    android:inputType="textPersonName"
                    android:textColorLink="@color/black" />

                <Button
                    android:id="@+id/btnretrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="240dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="190dp"
                    android:background="@drawable/buttonshape"
                    android:fontFamily="sans-serif"
                    android:text="Viewuser"

                    android:textColor="@color/white"
                    android:textColorLink="@color/white" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

